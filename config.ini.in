[bridge]
type = bridge
children = node

#
# Managers
#

[visualizer]
type = ve
children = node
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_ve_visualizer${CMAKE_SHARED_LIBRARY_SUFFIX}

[proxy]
type = vem
port = 4200
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_proxy_server${CMAKE_SHARED_LIBRARY_SUFFIX}
children = node

[cluster]
type = vem
children = node
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_vem_cluster${CMAKE_SHARED_LIBRARY_SUFFIX}

[node]
type = vem
children = cpu
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_vem_node${CMAKE_SHARED_LIBRARY_SUFFIX}
timimg = false

#
# Engines
#
[cpu]
type = ve
${DISABLE_LINUX_COMPILER}compiler_cmd="gcc -I${CMAKE_INSTALL_PREFIX}/include -I${CMAKE_INSTALL_PREFIX}/include/bohrium -I${CMAKE_INSTALL_PREFIX}/share/bohrium/include -lm -O3 -march=native -fopenmp -fPIC -std=c99 -x c -shared - -o "
${DISABLE_OSX_COMPILER}compiler_cmd="${CMAKE_INSTALL_PREFIX}/var/bohrium/scripts/osx_compile.sh -I${CMAKE_INSTALL_PREFIX}/include -I${CMAKE_INSTALL_PREFIX}/include/bohrium -I${CMAKE_INSTALL_PREFIX}/share/bohrium/include -o "
object_path=${CMAKE_INSTALL_PREFIX}/var/bohrium/objects
kernel_path=${CMAKE_INSTALL_PREFIX}/var/bohrium/kernels
template_path=${CMAKE_INSTALL_PREFIX}/share/bohrium/templates
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_ve_cpu${CMAKE_SHARED_LIBRARY_SUFFIX}
libs = ${CMAKE_INSTALL_PREFIX}/lib/libbh_matmul${CMAKE_SHARED_LIBRARY_SUFFIX},${CMAKE_INSTALL_PREFIX}/lib/libbh_visualizer${CMAKE_SHARED_LIBRARY_SUFFIX},${CMAKE_INSTALL_PREFIX}/lib/libbh_fftw${CMAKE_SHARED_LIBRARY_SUFFIX}

[gpu]
type = ve
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_ve_gpu${CMAKE_SHARED_LIBRARY_SUFFIX}
libs = ${CMAKE_INSTALL_PREFIX}/lib/libbh_ve_gpu${CMAKE_SHARED_LIBRARY_SUFFIX}
include = ${CMAKE_INSTALL_PREFIX}/share/bohrium/include
# Aditional options (string) given to the opencl compiler. See documentation for clBuildProgram
#compiler_options = "-cl-opt-disable"
# kernel = {[both],fixed,dynamic}
kernel = both
# compile = {[async],sync}
compile = async
children = cpu

#
# Filters
#
[transitive_reduction]
type = filter
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_filter_transitive_reduction${CMAKE_SHARED_LIBRARY_SUFFIX}
children = cpu

[pprint]
type = filter
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_filter_pprint${CMAKE_SHARED_LIBRARY_SUFFIX}
children = cpu

[validate]
type = filter
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_filter_validate${CMAKE_SHARED_LIBRARY_SUFFIX}
children = cpu

[range]
type = filter
impl = ${CMAKE_INSTALL_PREFIX}/lib/libbh_filter_range${CMAKE_SHARED_LIBRARY_SUFFIX}
children = cpu

